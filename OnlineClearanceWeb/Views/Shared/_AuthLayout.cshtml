@using Microsoft.Extensions.Configuration
@using Microsoft.Extensions.Options;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - OnlineClearance</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="refresh" content="1800">

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- App css -->
    <!-- BEGIN: CSS Assets-->
    <link rel="stylesheet" href="~/src/css/app.css" />
    <!-- END: CSS Assets-->
</head>


<body class="login">

    <!-- HOME -->
    <div class="container sm:px-10">
        <div class="block xl:grid grid-cols-2 gap-4">
            <!-- BEGIN: Login Info -->
            <div class="hidden xl:flex flex-col min-h-screen">
                <a href="" class="-intro-x flex items-center pt-5">
                    <img alt="Online Clearance" class="w-6" src="~/img/logo/logosn.png">
                    <span class="text-white text-lg ml-3"> Online Clearance<span class="font-medium">Preview</span> </span>
                </a>
                <div class="my-auto">
                    <img alt="Online Clearance Portal" class="-intro-x w-1/2 -mt-16" src="~/img/logo/logo.png">
                    <div class="-intro-x text-white font-medium text-4xl leading-tight mt-10">
                        Get Ahead of your Colleagues
                        <br>
                        sign in to your account.
                    </div>
                    <div class="-intro-x mt-5 text-lg text-white dark:text-gray-500">Get accustomed with our Super efficient Portal</div>
                </div>
            </div>
            <!-- END: Login Info -->

            @RenderBody()
        </div>
    </div>
    <!-- END HOME -->
    <!-- BEGIN: JS Assets-->
    <script src="~/src/js/app.js"></script>
    <!-- END: JS Assets-->

    @RenderSection("Scripts", required: false)

</body>
</html>