@model IEnumerable<OnlineClearanceCore.Core.Entities.Student>
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Students";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Clearance</title>

    <!---------------------------------Login page css---->
    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.ico">

    <!-- main CSS
        ============================================ -->
    <link href="~/src/css/app.css" rel="stylesheet" />
    <script src="~/dist/app.js" defer></script>
</head>
<body class="app">

    <div id="app" class="content">
        <div class="intro-y flex items-center mt-8">
            <h2 class="text-lg font-medium mr-auto">
                Welcome @ViewBag.studentid
            </h2>
            
        </div>
        <div class="grid grid-cols-12 gap-6 mt-12">
            <div class="intro-y col-span-12 lg:col-span-12">
                <div class="intro-y box">
                    
                    <div class="intro-y col-span-12 lg:col-span-12">
                        <!-- BEGIN: Vertical Form yes -->
                        <div class="intro-y box">
                            <table class="table table-striped table-bordered table-hover" style="width:100%">
                                <thead>
                                    @foreach (var a in Model)
                                    {
                                        <tr>
                                            <th>Student Id</th>
                                            <th>@a.StudentId</th>
                                        </tr>
                                        <tr>
                                            <th>Name</th>
                                            <th>@a.FirstName @a.OtherNames</th>
                                        </tr>

                                        <tr>
                                            <th>Graduation Date</th>
                                            <th>@a.GraduatedDate</th>
                                        </tr>
                                        <tr>
                                            <th>Department</th>
                                            <th>@a.department</th>
                                        </tr>
                                        <tr>
                                            <th>Course</th>
                                            <th>@a.CourseProgram</th>
                                        </tr>
                                        <tr>
                                            <th>GPA</th>
                                            <th>@a.GPA</th>
                                        </tr>
                                        <tr>
                                            <th></th>
                                        </tr>
                                        <tr>
                                            <th>HOD</th>
                                            <th></th>
                                            <th>Admin</th>
                                            <th></th>
                                            <th>Library</th>


                                        </tr>
                                        <tr>
                                            <th>@a.ApprovedByHOD <br />@a.ApprovedDateHOD <br />@a.hodremark</th>
                                            <th></th>
                                            <th>@a.ApprovedByAdmin <br />@a.ApprovedDateAdmin<br />@a.adminremark</th>
                                            <th></th>
                                            <th>@a.ApprovedByLibrary<br />@a.ApprovedDateLIB <br />@a.libremark</th>


                                        </tr>
                                    }
                                </thead>
                              

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>


    <script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js"></script>
    <!-- main JS
    ============================================ -->
    <script src="~/src/js/app.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>

