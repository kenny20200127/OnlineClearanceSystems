@using OnlineClearanceWeb.ViewModels.Users;
@model UsersViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="intro-y flex items-center mt-8">
    <h1 class="text-lg font-medium mr-auto">
        User List
    </h1>
</div>
<div class="grid grid-cols-12 gap-6 mt-12">
    <div class="intro-y col-span-12 lg:col-span-12">
        <div class="intro-y box">
            <div class="flex flex-col sm:flex-row items-center p-5 border-b border-gray-200 dark:border-dark-5">
                <h5>Declined Students</h5>
            </div>
            <div class="intro-y col-span-12 lg:col-span-12">
                <!-- BEGIN: Vertical Form 3-->
                <div class="intro-y box">

                    @*<div class="card-header">
                            <button class='btn btn-success' id="add-edit" data-toggle="modal" data-target="#userModal">
                                <i class="icon icon-plus"></i> &nbsp; Add User
                            </button>
                        </div>*@
                    <div class="text-left">
                        <a href="javascript:;" data-toggle="modal" data-target="#header-footer-modal-preview" class="button inline-block bg-theme-1 text-white">Add</a>
                    </div>


                    <table id="base-style" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Fullname</th>
                                <th>Email Address </th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td data-user-id="@user.Id">
                                        @user.FirstName @user.LastName
                                    </td>
                                    <td>
                                        @user.Email
                                    </td>
                                    @if (user.IsActive)
                                    {
                                        <td><span class="badge badge-success"><i class="fa fa-check"></i>&nbsp;Active</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-danger"><i class="fa fa-times"></i>&nbsp;Inactive</span></td>
                                    }
                                    @if (user.IsActive)
                                    {
                                        <td><a type="button" class="btn btn-danger" asp-controller="User" asp-action="ToggleStatus/@user.Id">Deactivate</a></td>
                                    }
                                    else
                                    {
                                        <td><a asp-controller="User" asp-action="ToggleStatus/@user.Id" type="button" class="btn btn-primary">Activate</a></td>
                                    }
                                </tr>

                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>


        <div class="modal" id="header-footer-modal-preview">
            <di class="modal__content">
                <div class="flex items-center px-5 py-5 sm:py-3 border-b border-gray-200 dark:border-dark-5">
                    <h2 class="font-medium text-base mr-auto">Broadcast Message</h2>
                    <button class="button border items-center text-gray-700 dark:border-dark-5 dark:text-gray-300 hidden sm:flex">
                        <i data-feather="file" class="w-4 h-4 mr-2"></i> Download Docs
                    </button>
                    <div class="dropdown sm:hidden">
                        <a class="dropdown-toggle w-5 h-5 block" href="javascript:;">
                            <i data-feather="more-horizontal" class="w-5 h-5 text-gray-700 dark:text-gray-600"></i>
                        </a>
                        <div class="dropdown-box w-40">
                            <div class="dropdown-box__content box dark:bg-dark-1 p-2">
                                <a href="javascript:;" class="flex items-center p-2 transition duration-300 ease-in-out bg-white dark:bg-dark-1 hover:bg-gray-200 dark:hover:bg-dark-2 rounded-md">
                                    <i data-feather="file" class="w-4 h-4 mr-2"></i> Download Docs
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <form action="/user/create" id="post-form" class="form" method="post">
                    @Html.AntiForgeryToken()

                    <div class="p-5 grid grid-cols-12 gap-4 row-gap-3">

                        <div class="col-span-12 sm:col-span-6">
                            <label for="email" class="control-label">
                                Email
                            </label>
                            <input type="email" id="email" name="email" required class="input w-full border mt-2 flex-1">
                        </div>
                        <div class="col-span-12 sm:col-span-6">
                            <label for="email" class="control-label">
                                Username
                            </label>
                            <input type="text" id="username" name="username" required class="input w-full border mt-2 flex-1">
                        </div>


                        <input type="hidden" id="id" name="id" value="0" />

                        <div class="col-span-12 sm:col-span-6">
                            <label for="firstname" class="control-label">
                                First Name
                            </label>
                            <input type="text" id="firstname" name="firstname" required class="input w-full border mt-2 flex-1">
                        </div>
                        <div class="col-span-12 sm:col-span-6">
                            <label for="lastname" class="control-label">
                                Last Name
                            </label>
                            <input type="text" id="lastname" name="lastname" required class="input w-full border mt-2 flex-1">
                        </div>


                        <div class="col-span-12 sm:col-span-6">
                            <label for="password" class="control-label">
                                Password
                            </label>
                            <input type="password" id="password" name="password" required class="input w-full border mt-2 flex-1">
                        </div>
                        <div class="col-span-12 sm:col-span-6">
                            <label for="confirm-password" class="control-label">
                                Confirm Pasword
                            </label>
                            <input type="password" id="confirmpassword" name="confirmpassword" required class="input w-full border mt-2 flex-1">
                        </div>
                        <div class="col-span-12 sm:col-span-6">
                            <label for="active" class="control-label">
                                Active
                            </label>
                            <label class="switch switch-default switch-pill switch-secondary mr-2">
                                <input name="Active" type="checkbox" id="isactive" class="switch-input" value="false">
                                <span class="switch-label"></span>
                                <span class="switch-handle"></span>
                            </label>
                        </div>

                        <div class="col-span-12 sm:col-span-6">
                            <span style="font-weight:bold; ">User permissions</span>

                            <label for="roles" class="">
                                Roles
                            </label>

                            <select style="width:100%; position:relative;left:10px;" id="roles" name="roles" class="required input w-full border mt-2 flex-1 row">
                                <option value="">Select Roles</option>
                                @foreach (var role in Model.Roles)
                                {
                                    <option value="@role.Id">@role.Name</option>
                                }
                            </select>
                        </div>

                        <div class="px-5 py-3 text-right border-t border-gray-200 dark:border-dark-5">
                            <button type="button" class="button w-20 border text-gray-700 dark:border-dark-5 dark:text-gray-300 mr-1" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="button w-20 bg-theme-1 text-white" id="addUser">Save</button>
                        </div>

                    </div>
                </form>
        </div>

    </div>
</div>